@model ImageGallery.Models.Photo
@{
    ViewBag.Title = "Удалить";
}

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <form method="post" asp-controller="Photos" asp-action="Delete" asp-route-id="@Model.Id">
        @Html.HiddenFor(model => model.Kind)
        @Html.HiddenFor(model => model.KindId)
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayNameFor(model => Model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd>
                @if (Model.Extension.ToLower() == "pdf")
                {
                    <img id="Content" class="picture" src="~/images/pdf.gif" alt="Image" />
                }
                else
                {
                    <img id="Content" class="picture" src="data:image/@Model.Extension;base64,@Convert.ToBase64String(Model.Content,0,Model.Content.Length , Base64FormattingOptions.None)" alt="Image" />
                }
            </dd>


        </dl>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Удалить" class="btn btn-warning" />
        </div>
    </form>
</div>
