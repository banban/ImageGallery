@model ImageGallery.Models.Photo
@{
    ViewBag.Title = "Изменить";
}

<div>
    <form method="post" asp-controller="Photos" asp-action="Upload" asp-route-id="@Model.Id" enctype="multipart/form-data">
        <input type="file" name="file" />
        <input type="submit" value="Загрузить" />
    </form>

    <form method="post" asp-controller="Photos" asp-action="Update" asp-route-id="@Model.Id">
        @Html.HiddenFor(model => model.Kind)
        @Html.HiddenFor(model => model.KindId)
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <img asp-for="Content" class="picture" src="data:image/@Model.Extension;base64,@Convert.ToBase64String(Model.Content,0,Model.Content.Length , Base64FormattingOptions.None)" alt="Image" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" asp-format=""/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </form>

</div>


